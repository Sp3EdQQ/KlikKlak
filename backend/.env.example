# Backend Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/klikklak

# JWT
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-refresh-secret-key-here-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# OpenAI API (for Chatbot)
# Get your key from: https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-proj-your-openai-key-here
OPENAI_MODEL=gpt-4o

# Local AI Configuration (for testing)
# Set USE_LOCAL_AI=true to use local AI instead of OpenAI
USE_LOCAL_AI=true
LOCAL_AI_URL=http://localhost:11434/v1
LOCAL_AI_MODEL=llama3.2

# Recommended local AI setups:
# - Ollama: http://localhost:11434/v1 (install from ollama.ai)
# - LM Studio: http://localhost:1234/v1
# - LocalAI: http://localhost:8080/v1

# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173
